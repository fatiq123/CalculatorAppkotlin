<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvOutputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="50dp"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:layout_above="@id/tvInputText">

    </TextView>



    <TextView
        android:id="@+id/tvInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="100dp"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:layout_above="@+id/linearlayout1">

    </TextView>



    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">



            <ImageView
                android:id="@+id/ivAC"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_ac"
                android:layout_marginStart="25dp" />

            <ImageView
                android:id="@+id/ivModulus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_module"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/ivDivide"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_divide"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_equal"
                android:layout_marginStart="25dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">


            <ImageView
                android:id="@+id/ivBtn7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_7"
                android:layout_marginStart="25dp" />

            <ImageView
                android:id="@+id/ivBtn8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_8"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/ivBtn9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_9"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/ivBtnMultiply"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_multiplication"
                android:layout_marginStart="25dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">


            <ImageView
                android:id="@+id/ivBtn4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_4"
                android:layout_marginStart="25dp" />

            <ImageView
                android:id="@+id/ivBtn5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_5"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/ivBtn6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_6"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/ivBtnMinus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_minus"
                android:layout_marginStart="25dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">


            <ImageView
                android:id="@+id/ivBtn1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_1"
                android:layout_marginStart="25dp" />

            <ImageView
                android:id="@+id/ivBtn2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_2"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/ivBtn3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_3"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/ivBtnPlus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_plus"
                android:layout_marginStart="25dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_0"
                android:layout_marginStart="25dp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/ivBtn0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_0"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/ivBtnDot"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_dot"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/ivBtnEqual"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_equal"
                android:layout_marginStart="25dp"/>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>